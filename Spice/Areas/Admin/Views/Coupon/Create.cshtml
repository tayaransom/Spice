@model Spice.Models.Coupon

<br />
<h2 class="text-info">Create Coupon</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2 my-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5 my-2">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 my-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5 my-2">
                <input type="file" id="projectImage" name="files" multiple class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 my-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5 my-2">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control form-select"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 my-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5 my-2">
                <input asp-for="Discount" class="form-control" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 my-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-5 my-2">
                <input asp-for="MinimumAmount" class="form-control" />
            </div>
            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
        </div>
        <div class="form-group form-switch row ps-0">
            <div class="col-4">
                <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault"></label>
            </div>
            <div class="col-4">
                <input type="checkbox" asp-for="IsActive" class="form-check-input" id="flexSwitchCheckDefault"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2 my-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
